{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@classes/*": ["src/classes/*"],
      "@utility/*": ["src/utility/*"],
      "@data/*": ["src/data/*"]
    }
  },
  "include": ["src/**/*", "src/database.js"],
  "exclude": ["node_modules"]
}
